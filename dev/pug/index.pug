                    {
                      percent: "70%", 
                      title: 'Giao tiếp',
                      delay: '.4s'
                    },
                    {
                      percent: "80%", 
                      title: 'Làm việc nhóm',
                      delay: '.6s'
                    },
                    {
                      percent: "85%", 
                      title: 'Làm việc độc lập',
                      delay: '.8s'
                    },
                    {
                      percent: "80%", 
                      title: 'Tự học',
                      delay: '1s'
                    },
                    {
                      percent: "85%", 
                      title: 'Chiệu áp lực',
                      delay: '1.2s'
                    }
                  ]
                each skill in list_skills
                  li.column(class="wow fade-in-up" data-wow-delay=skill.delay)
                    +skills(skill)
      .advanced-skill
        .section-header(class="wow fade-in-up")
          +heading-primary('Kỹ Năng Chuyên Môn')
        .section-content
          .typography-wrapper(class="wow fade-in-up")
            p Trong 4 năm, tôi đã thiết kế, phát triển và tiếp thị các trang web. 
          .layout-row.large-three-column.medium-two-column.ex-small-one-column
            .column.margin-bottom-0(class="wow fade-in-up" data-wow-delay='.4s')
              +heading-secondary('Thiết Kế')
              .progress-wrapper
                ul.progress-list
                  -
                    var design = [
                      {
                        title: 'Photoshop', width: '80%'
                      },
                      {
                        title: 'illustrator', width: '65%'
                      },
                      {
                        title: 'Lightroom', width: '70%'
                      }
                    ]
                  each item in design
                    li
                      +progress-bar(item)
            .column.margin-bottom-0(class="wow fade-in-up" data-wow-delay='.6s')
              +heading-secondary('Front-end')
              .progress-wrapper
                ul.progress-list
                  -
                    var design = [
                      {
                        title: 'HTML5, CSS3', width: '90%'
                      },
                      {
                        title: 'Javascript + JQuery', width: '70%'
                      },
                      {
                        title: 'Responsive, PerfectPixel', width: '85%'
                      },
                      {
                        title: 'Wordpress', width: '70%'
                      },
                      {
                        title: 'Vuejs', width: '60%'
                      }
                    ]
                  each item in design
                    li
                      +progress-bar(item)
              .clearfix
                ul.list-tags
                  -
                    var list_tag01 = ['Bootstrap', 'Foundation']
                  each item in list_tag01
                    li
                      span.tag= item
                ul.list-tags
                  -
                    var list_tag02 = ['SASS, SCSS, Compass', 'Cross-browser']
                  each item in list_tag02
                    li
                      span.tag= item
                ul.list-tags
                  -
                    var list_tag03 = ['Grunt', 'Pugjs', 'GIT']
                  each item in list_tag03
                    li
                      span.tag= item
            .column.margin-bottom-0(class="wow fade-in-up" data-wow-delay='.8s')
              +heading-secondary('Back-end')
              .progress-wrapper
                ul.progress-list
                  -
                    var design = [
                      {
                        title: 'PHP', width: '50%'
                      },
                      {
                        title: 'MySQL', width: '50%'
                      }
                    ]
                  each item in design
                    li
                      +progress-bar(item)
              .clearfix
                ul.list-tags
                  -
                    var list_tag04 = ['Wordpress', 'Shopify']
                  each item in list_tag04
                    li
                      span.tag= item

