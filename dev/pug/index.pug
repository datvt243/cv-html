extends _layouts/default

block vars
  -title        = 'Võ Tấn Đạt - CV'
  -description  = 'Front-end developer'
  -keywords     = 'HTML, CSS, JS, Vuejs'
  -pageID       = 'top'
  -path         = '.'

block container

  // ./ Thông tin
  section.section-wrapper.section-info#info
    .keyvisual
    .wrapper
      .layout-row.large-two-column.small-one-column
        .column.info
          .user-wrapper
            p.user-avatar(class="wow fade-in-up" data-wow-delay=".4s")
              img(src=path+'/img/avatar.jpg', alt="Vo Tan Dat")
            h1.user-name(class="wow fade-in-up" data-wow-delay=".6s")
              | Võ Tấn Đạt
            p.user-position(class="wow fade-in-up" data-wow-delay=".8s")
              i Front-end Developer
          p.text-center(class="wow fade-in-up" data-wow-delay="1s")
            a.btn.btn-download(href=path+'/pdf/Vo-Tan-Dat-CV.pdf') Download file PDF
        .column.align-self-end
          table.list-contact(class="wow fade-in-up" data-wow-delay="1.2s")
            tr
              th Phone
              td
                a.tel(href="tel:0385262510") 038 5262 510
            tr
              th Skype
              td
                | votanit
            tr
              th Email
              td
                a.email(href="mailto:votan.it@gmail.com") votan.it@gmail.com
            tr
              th Địa chỉ
              td
                address 14/13/69 Thân Nhân Trung, Tân Bình, TP. Hồ Chí Minh

  // ./ Giới Thiệu
  section.section-wrapper.section-about#about
    .wrapper
      .section-header(class="wow fade-in-up")
        +heading-primary('Xin chào, <br class="small-br">Tôi là Đạt')
      .section-content
        .typography-wrapper(class="wow fade-in-up")
          p Với niềm đam mê công nghệ thông tin, tôi hi vọng đem lòng nhiệt huyết, đam mê của mình cống hiến tất cả cho nơi tôi làm việc.
          p Mong muốn học hỏi kinh nghiệm ở môi trường làm việc chuyên nghiệp, năng động. Công việc ổn định để gắn bó lâu dài. Có cơ hội thăng tiến cao, thành công trong công việc.
          +list(
            [
              'Đam mê với lập trình web front-end, yêu thích tạo ra các giao diện web đẹp.',
              'Chăm chỉ học tập, tiếp thu nhanh nếu được training và hướng dẫn.',
              'Mong muốn nâng cao kinh nghiệm, nâng cao kĩ năng.',
              'Mục tiêu duy nhất là phấn đấu trở thành một lập trình viên front-end giỏi, cống hiến tốt cho công ty.'
            ]
          )
        .clearifix(class="wow fade-in-up")
          +heading-secondary('Mục tiêu nghề nghiệp')
          .typography-wrapper
            p Với 5 năm kinh nghiệm front-end với HTML, CSS, JS. Tôi hy vọng được làm việc ở lĩnh vực mới (Vuejs) để thử thách và phát triển bản thân.
            +list(
              [
                'Mong muốn tìm được chỗ làm ổn định lâu dài',
                'Mong muốn tìm được chỗ làm có cơ hội thăng tiến tốt',
                'Mong muốn tìm được chỗ làm có mức lương tốt',
                'Mong muốn tìm được nơi có cơ hội cống hiến bản thân tốt'
              ]
            )
            
  // ./ Kỹ Năng Cá Nhân - Kỹ Năng Chuyên Môn
  section.section-wrapper.section-skills#skills
    .wrapper
      .personal-skills
        .section-header(class="wow fade-in-up")
          +heading-primary('Kỹ Năng Cá Nhân')
        .section-content
          .layout-row.large-two-column.small-one-column
            .column.margin-bottom-0
              .typography-wrapper(class="wow fade-in-up")
